<resources>

    <!-- Base application theme. -->
    <style name="DetailsTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <!-- Android built-in styles -->
        <item name="android:windowBackground">@color/primaryLightColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>


        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ListTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimaryDark">#8C000000</item>
        <item name="android:background">#FF2C2C2C</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">#FF2C2C2C</item>
    </style>

</resources>
